	<script>
		var vitaminData = {};
		var chartType = 'line'; // Default chart type
	
		function updateChart(vitaminData, chartType){
    	var ctx = document.getElementById('vitaminChart').getContext('2d');
    
    // Destroy existing chart if it exists
    if (window.myChart) {
        window.myChart.destroy();
    }

    // Create a new chart
    window.myChart = new Chart(ctx, {
        type: chartType,
        data: {
            labels: Object.keys(vitaminData),
            datasets: [{
                label: 'Search Count',
                data: Object.values(vitaminData),
                backgroundColor: getRandomColorArray(Object.keys(vitaminData).length),
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
            legend: {
                display: true,
                position: 'top',
            },
            title: {
                display: true,
                text: 'Vitamin Search Count -' + getChartTitle(chartType),
                fontSize: 16
            }
        }
    });
}

function getChartTitle(chartType) {
    // Customize this function based on how you want to display the title
    return chartType.toUpperCase();
}
		function getRandomColorArray(count) {
			var colorArray = [];
			for (var i = 0; i < count; i++) {
				colorArray.push(getRandomColor());
			}
			return colorArray;
		}
	
		function getRandomColor() {
			var letters = '0123456789ABCDEF';
			var color = '#';
			for (var i = 0; i < 6; i++) {
				color += letters[Math.floor(Math.random() * 16)];
			}
			return color;
		}
	
		$(document).ready(function () {
			// Make an Ajax request on page load
			$.ajax({
				url: 'api/searchhistory', // Replace with your actual URL
				method: 'GET',
				dataType: 'json',
				success: function (data) {
					var chartDate = new Date(data[0].sDate);
					for (var i = 0; i < data.length; i++) {
						var txt = data[i].sVitamin.toLowerCase();
						vitaminData[txt] = (vitaminData[txt] || 0) + 1;
					}
					
				},
				error: function (error) {
					console.error('Error fetching data:', error);
				}
			});
		});
