	<script>
		$(document).ready(function()
		{
			$("#User_Profile").submit(function(event)
			{
				if (!CheckPassword()) 
				{
                    event.preventDefault(); // Prevent form submission if validation fails
                } 
				else 
				{
                    var Uid = document.getElementById("_id").value;
					event.preventDefault();
					var unindexed_array = $(this).serializeArray()
					var data={}
		
					$.map(unindexed_array,function(n,i)
					{
						data[n['name']] = n['value']
					})
					
					var request={
						"url":'http://localhost:4000/api/useraccounts/'+Uid,
						"method":'PUT',
						"data":data
					}
					$.ajax(request).done(function(response){
						alert("User Updated");
					});
                }
			})
		});
		function CheckPassword()
		{
			var oldPassword= document.getElementById("PasswordOld").value;
			var providedOld= document.getElementById("opwd").value;
			var NewPassword= document.getElementById("Password").value;
			console.log("providedOld->",providedOld)
			console.log("oldPassword->",oldPassword)
			if(oldPassword != providedOld)
			{
					alert("Provide your correct old password");
					return false;
			}
			else
			{
				if(NewPassword!="")
				{
					var passwordRegex = /^(?=.*[A-Z]).{8,}$/;
					if (!NewPassword.match(passwordRegex)) 
					{
						alert('Password must have at least 8 characters and contain at least one capital letter');
						return false;
					}
					else
					{
						return true;
					}
				}
				else
				{
					alert('New Password must have at least 8 characters and contain at least one capital letter');
						return false;
				}
			}
		}
		</script>

