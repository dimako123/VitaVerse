	<script>
	$(document).ready(function()
	{
	});
	function Delete(id)
	{
		var request = 
		{
			"url":'http://localhost:4000/api/useraccounts/'+id,
			"method":'DELETE',
		}
		if(confirm("do you really want to delete this record"))
		{
			$.ajax(request).done(function(response)
			{
				alert("Data Deleted Successfully");
				location.reload();
			})
		}
	}
	</script>
